<body>
    <main id="main" class="main" style="margin:20px 50px 40px 50px">

        <div class="pagetitle">
            <h1>Courses Results</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Course Result</li>
                </ol>
            </nav>
        </div>
        <br />
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Course Result Data</h5>
                            <p>
                                Include their full name and professional title, such as Professor, Instructor, or Teaching Assistant.
                                Provide their contact information if necessary for students or administrative purposes.
                                Detail their academic qualifications, including degrees and certifications.
                                Highlight their areas of expertise and specializations within their field.
                            </p>
                            <br />
                            <!-- Table with stripped rows -->
                            <table class="table datatable1">
                                <thead>
                                    <tr>
                                        <th>Course Name</th>
                                        <th>Degree</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                        @foreach(var studentCourse in Model.StudentCourses)
                                        {
                                            <tr>
                                                <td>@studentCourse.Course.Name</td>
                                                <td>
                                                @foreach(var Result in Model.CoursesResults.Where(cr => cr.CourseID == studentCourse.CourseID))
                                                {
                                                    <span>@Result.Grade</span>
                                                }
                                            </td>
                                            <td>
                                                @foreach (var Result in Model.CoursesResults.Where(cr => cr.CourseID == studentCourse.CourseID))
                                                {
                                                    <a asp-controller="CourseResult" asp-action="EditDegree" asp-route-ID="@Result.ID" class="btn btn-primary">Edit Grade <i class="bi bi-pen"></i></a>
                                                }
                                            </td>
                                        </tr>
                                        }
                                    
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->

                        </div>
                        <!---->
                        <br />
                    </div>

                </div>

            </div>
        </section>

    </main><!-- End #main -->


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
